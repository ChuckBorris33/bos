[Unit]
Description=Samba Server
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/dockurr/samba:latest
ContainerName=samba
PublishPort=445:445
Volume=/var/server_storage:/Data:z
Volume=/etc/bos/samba/smb.conf:/etc/samba/smb.conf:ro,Z

[Service]
Restart=on-failure

[Install]
WantedBy=multi-user.target
