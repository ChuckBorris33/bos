# Sway configuration for ES-DE Kiosk

# Set Win key as mod
set $mod Mod4

# Set Alt key as alt
set $alt Mod1

# Set background
output * bg /usr/share/backgrounds/default.jpg fill

# Force Full HD resolution
output * resolution 1920x1080

# font for window titles
font pango:monospace 10

# Autostart ES-DE in gamescope
exec $HOME/start_esde_kiosk.sh

# Make all new windows fullscreen
for_window [class=".*"] fullscreen

# Remove title bars
default_border none

# Hide cursor in specific applications
for_window [class=".*es-de.*"] seat seat0 hide_cursor 1
for_window [app_id=".*es-de.*"] seat seat0 hide_cursor 1
for_window [class="gamescope"] seat seat0 hide_cursor 1
for_window [app_id="gamescope"] seat seat0 hide_cursor 1
for_window [class="retroarch"] seat seat0 hide_cursor 1
for_window [app_id="retroarch"] seat seat0 hide_cursor 1
for_window [class="Steam"] seat seat0 hide_cursor 1
for_window [app_id="Steam"] seat seat0 hide_cursor 1
for_window [class="steam"] seat seat0 hide_cursor 1
for_window [app_id="steam"] seat seat0 hide_cursor 1

# Shortcuts
bindsym $alt+Shift+q kill
bindsym $alt+d exec dmenu_run
bindsym $alt+Delete exec makoctl dismiss --all
