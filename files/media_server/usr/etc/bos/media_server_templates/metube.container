[Unit]
Description=Metube
After=network-online.target
Wants=network-online.target

[Container]
Image=ghcr.io/alexta69/metube
ContainerName=metube
User=1006:1003

# Expose web UI on localhost only, Caddy will reverse proxy
PublishPort=127.0.0.1:8081:8081

# Mount the media directory to serve and a database file for persistence
Volume=/var/server_storage/downloads:/downloads:z

[Service]
Restart=on-failure

[Install]
WantedBy=multi-user.target
